{
  "name": "drizzle-service",
  "module": "lib/index.js",
  "type": "module",
  "version": "0.0.3",
  "description": "A service for managing Drizzle ORM entities with Bun and TypeScript.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": {
    "name": "Angel Lopez",
    "email": "contact@imrlopez.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ImRLopezAG/drizzle-service.git"
  },
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    },
    "./pg": {
      "import": "./lib/pg/index.js",
      "require": "./lib/pg/index.js"
    },
    "./sqlite": {
      "import": "./lib/sqlite/index.js",
      "require": "./lib/sqlite/index.js"
    },
    "./builder/*": {
      "import": "./lib/builder/*",
      "require": "./lib/builder/*"
    }
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.cjs",
    "lib/**/*.d.ts",
    "lib/**/*.d.cts"
  ],
  "keywords": [
    "drizzle-orm",
    "typescript",
    "repository",
    "react",
    "nextjs"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "biome check .",
    "lint:unsafe": "biome check --write --unsafe .",
    "lint:write": "biome check --write ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.5.0",
    "@repo/type-config": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5",
    "drizzle-orm": "^0.44.2"
  }
}